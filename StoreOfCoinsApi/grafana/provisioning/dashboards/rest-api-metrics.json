  "timezone": "",
  "title": "StoreOfCoins - REST API Metrics",
  "uid": "soc-rest-metrics",
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "REST - Request Rate",
      "id": 1,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{route=~\"/api/.*\"}[1m])) by (method, route)",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "REST - Request Duration (p95)",
      "id": 2,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{route=~\"/api/.*\"}[1m])) by (le, method, route))"
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "type": "stat",
      "title": "REST - Error Rate",
      "id": 3,
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{route=~\"/api/.*\", status=~\"5..\"}[1m])) by (method, route, status)",
          "legendFormat": "{{method}} {{route}} {{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.1, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "REST - Active Requests",
      "id": 4,
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_sum{route=~\"/api/.*\"}[1m]) / rate(http_server_requests_seconds_count{route=~\"/api/.*\"}[1m])) by (method, route)",
          "legendFormat": "{{method}} {{route}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        }
      }
    }
  ]
}
